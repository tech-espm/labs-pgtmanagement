    document.getElementById('form').onsubmit = (e) => {
        group_name = document.getElementById('group').value;
        group_course = document.getElementById('course')[0].value;
        campus_id = document.getElementById('campus')[0].value;

        $.ajax({
            url: 'group/create',
            type: "POST",
            data: {
                groupName: group_name,
                groupCourse: group_course,
                campusID: campus_id
            },
            processData: false,
            cache: false,
            contentType: false,
            success: function (data) {
                alert('Cadastrado com sucesso!')
            },
            error: function (request, status, error) {
                alert('Um erro ocorreu durante o cadastro!');
            }
        });
        return false;
