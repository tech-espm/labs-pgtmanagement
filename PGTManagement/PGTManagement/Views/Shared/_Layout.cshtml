<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <!--<meta name="viewport" content="width=device-width, initial-scale=1.0">-->
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

    <title>@ViewBag.Title - Gerenciamento de TCCs</title>

    <link href="@Url.Content("https://fonts.googleapis.com/css?family=Mansalva&display=swap")" rel="stylesheet" />
    <link href="~/Style/main.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <section>
        <div class="container-fluid height">
            <div class="row">
                <div class="menu-bar col-md-2 height bg-white">
                    <a href="~/Views/Shared/_Layout.cshtml">~/Views/Shared/_Layout.cshtml</a>
                    <img src="~/img/espm_logo.png" alt="Logo da ESPM" class="logo">
                    <button class="menu-option" onclick="location.href='@Url.Action("Index", "Home")'">
                        <p class="menu-text">Home</p>
                    </button>
                    <button class="menu-option" onclick="location.href='@Url.Action("Index", "Parecer")'">
                        <p class="menu-text">Pareceres</p>
                    </button>
                    <button class="menu-option" onclick="location.href='@Url.Action("Index", "Submit")'">
                        <p class="menu-text">Submissão</p>
                    </button>
                    <button class="menu-option" onclick="location.href='@Url.Action("Index", "User")'">
                        <p class="menu-text">Cadastro</p>
                    </button>
                    <button class="menu-option" onclick="location.href='@Url.Action("Index", "Group")'">
                        <p class="menu-text">Grupos</p>
                    </button>
                    <button class="menu-option" onclick="location.href='@Url.Action("Index", "Report")'">
                        <p class="menu-text">Relatórios</p>
                    </button>
                    <button class="menu-option">
                        <p class="menu-text">Sair</p>
                    </button>
                </div>

                <div class="col-md-10 height-80">
                    @RenderBody()
                </div>
            </div>
        </div>
    </section>




    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
